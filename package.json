{
  "name": "hoodler",
  "version": "1.0.0",
  "description": "A smart contract for holding all Ether, ERC20, and ERC721 tokens until a predefined date or event",
  "main": "/contracts",
  "scripts": {
    "compile": "npx hardhat compile",
    "coverage": "npx hardhat coverage",
    "deploy-local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy-rinkeby": "npx hardhat run scripts/deploy.js --network rinkeby",
    "lint:sol": "./node_modules/.bin/solhint -f table contracts/**/*.sol",
    "lint:ts": "eslint --config ./.eslintrc.json --ignore-path ./.eslintignore --ext .js,.ts .",
    "start": "npx hardhat run scripts/run.ts",
    "server": "npx hardhat node",
    "test": "npx hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nwthomas/hoodler.git"
  },
  "keywords": [
    "Ethereum",
    "Solidity",
    "ERC20",
    "ERC721",
    "Nathan",
    "Thomas",
    "Blockchain"
  ],
  "author": "Nathan Thomas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nwthomas/hoodler/issues"
  },
  "homepage": "https://github.com/nwthomas/hoodler#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^2.1.3",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/contracts": "^4.3.2",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.6.7",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  }
}
